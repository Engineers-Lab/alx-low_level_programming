#include "main.h"
/**
 *print_sign - prints the sign of the number
 *@c: the number
 *
 *Return: 1; 0 or -1 depanding on the sign
 */
int print_sign(int n)
{
	if (c > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (c < 0)
	{
		_putchar('-');
		return (-1);
	}
	else
	{
		_putchar('0');
		return (0);
	}
}

